<!DOCTYPE html>
<html lang="en">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Proyecto'}) %>

  <style>
    /*************************
*******Typography******
**************************/
    @import url("https://fonts.googleapis.com/css?family=Montserrat:400,400i,500,500i,600,600i,700,700i&display=swap");

    body {
      font-family: "Monserrat", sans-serif;
      position: relative;
      background-color: #eeeeee;
    }

    .left-sidebar h2 {
      color: #2b2d42;
      font-family: "Roboto", sans-serif;
      font-size: 18px;
      font-weight: 600;
      text-transform: uppercase;
      position: relative;
      z-index: 3;
    }
  </style>

  <body>
    <!-- Include Navbar -->
    <%- include('partials/navbar') %>

    <!-- Include Banner -->
    <%- include('banner01') %>

    <!-- SECTION -->
    <div class="section">
      <div class="container">
        <div class="row">
          <div class="col-sm-3">
            <div class="left-sidebar">
              <div class="card shadow-sm p-3">
                <!--Categorias-->
                <div
                  class="list-group p-4 panel-group category-products"
                  id="accordian"
                >
                  <h2 class="title">Categorias</h2>

                  <ul class="list-group">
                    <% for(let i=0; i < categorias.length; i++) { %>
                      <form action="/store "method="POST">
                        <li>
                          <input
                            style='width: 1px; color:white;'
                            type="text"
                            name='search'
                            value=<%= categorias[i]%>
                          />
                          <button ><%= categorias[i]%></button>
                        </li>
                    </form>
                    <% } %>
                  </ul>
                </div>
                <!--/Categorias-->
                <!--Marcas-->
                <div class="p-4">
                  <!--brands_products-->
                  <div class="title">
                    <h2>Marcas</h2>
                  </div>
                  <div class="brands">
                    <ul class="list-group">
                      <% for(let i=0; i < marcas.length; i++) { %>
                        <form action="/store "method="POST">
                          <li>
                            <input
                              style='width: 1px; color:white;'
                              type="text"
                              name='search'
                              value=<%= marcas[i]%>
                            />
                            <button ><%= marcas[i]%></button>
                          </li>
                      </form>
                      <% } %>
                    </ul>
                  </div>
                </div>
                <!--/Marcas -->
              </div>
            </div>
          </div>

          <div class="col-sm-9 padding-right">
            <div class="features_items">
              <!--features_items-->

              <div class="row">
                <% publications.forEach(publication => { %>

                <div class="col-md-4">
                  <%-include('product/product',{publication})%>
                </div>

                <% }) %>
              </div>
            </div>
            <!--features_items-->

            <div class="d-flex align-items-end flex-column mb-3">
              <div class="p-2">
                <nav aria-label="Page navigation example">
                  <ul class="pagination">
                    <li class="page-item">
                      <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                        <span class="sr-only">Previous</span>
                      </a>
                    </li>
                    <li class="page-item">
                      <a class="page-link" href="#">1</a>
                    </li>
                    <li class="page-item">
                      <a class="page-link" href="#">2</a>
                    </li>
                    <li class="page-item">
                      <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                      <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                        <span class="sr-only">Next</span>
                      </a>
                    </li>
                  </ul>
                </nav>
              </div>
            </div>
          </div>
        </div>
      </div>

      <!-- /section -->
    </div>

    <!-- Include Footer -->
    <%- include('partials/footer') %>

    <script src="/javascript/publicacion.js"></script>
    <script
      src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
      integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
      integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
      integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
