<!DOCTYPE html>
<html lang="en">
  <!-- Include Head -->
  <%- include('partials/head', {title: 'Proyecto'}) %>
  <body>
    <!-- Include Header -->
    <%- include('partials/navbar') %>

    <!-- SECTION -->
    <div class="section">
      <!-- container -->
      <div class="container">
        <!-- row -->
        <div class="row">
          <div class="col-md-7">
            <!-- Billing Details -->
            <div class="billing-details">
              <div class="section-title">
                <h3 class="title">Direccion de Facturacion</h3>
              </div>
              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="nombre"
                  placeholder="Nombre"
                />
                <span class="hide"
                  >El nombre debe tener al menos 2 caracteres</span
                >
              </div>
              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="apellido"
                  placeholder="Apellido"
                />
                <span class="hide"
                  >El apellido debe tener al menos 2 caracteres</span
                >
              </div>

              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="direccion"
                  placeholder="Direccion"
                />
                <span class="hide">Debe ingresar su Direccion</span>
              </div>
              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="ciudad"
                  placeholder="Ciudad"
                />
                <span class="hide">Debe ingresar la Ciudad</span>
              </div>
              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="pais"
                  placeholder="Pais"
                />
                <span class="hide">Debe ingresar el Pais</span>
              </div>
              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="codigoPostal"
                  placeholder="Codigo Postal"
                />
                <span class="hide">Debe ingresar el Codigo Postal</span>
              </div>
              <div class="form-group">
                <input
                  class="input"
                  type="text"
                  name="telefono"
                  placeholder="Telefono"
                />
                <span class="hide">Debe ingresar el Telefono</span>
              </div>
              <div class="form-group">
                <div class="input-checkbox">
                  <input type="checkbox" id="create-account" />
                  <label for="create-account">
                    <span></span>
                    Crear cuenta
                  </label>
                  <div class="caption">
                    <p>
                      Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                      sed do eiusmod tempor incididunt.
                    </p>
                    <input
                      class="input"
                      type="password"
                      name="password"
                      placeholder="Ingrese su Password"
                    />
                  </div>
                </div>
              </div>
            </div>
            <!-- /Billing Details -->

            <!-- Shiping Details -->
            <div class="shiping-details">
              <div class="section-title">
                <h3 class="title">Direccion de Envio</h3>
              </div>
              <div class="input-checkbox">
                <input type="checkbox" id="shiping-address" />
                <label for="shiping-address">
                  <span></span>
                  Enviar a otra direccion?
                </label>
                <div class="caption">
                  <div class="form-group">
                    <input
                      class="input"
                      type="text"
                      name="envio_nombre"
                      placeholder="Nombre"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="input"
                      type="text"
                      name="envio_apellido"
                      placeholder="Apellido"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="input"
                      type="text"
                      name="envio_direccion"
                      placeholder="Direcccion"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="input"
                      type="text"
                      name="envio_ciudad"
                      placeholder="Ciudad"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="input"
                      type="text"
                      name="envio_pais"
                      placeholder="Pais"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="input"
                      type="text"
                      name="envio_codigoPostal"
                      placeholder="Codigo Postal"
                    />
                  </div>
                  <div class="form-group">
                    <input
                      class="input"
                      type="tel"
                      name="envio_telefono"
                      placeholder="Telefono"
                    />
                  </div>
                </div>
              </div>
            </div>
            <!-- /Shiping Details -->

            <!-- Order notes -->
            <div class="order-notes">
              <textarea
                class="input"
                name="aclaraciones"
                placeholder="Aclaraciones"
              ></textarea>
            </div>
            <!-- /Order notes -->
          </div>

          <!-- Order Details -->
          <div class="col-md-5 order-details">
            <div class="section-title text-center">
              <h3 class="title">Tu Compra</h3>
            </div>
            <div class="order-summary">
              <div class="order-col">
                <div><strong>Producto</strong></div>
                <div><strong>Total</strong></div>
              </div>
              <div class="order-products">
                <ul class="list-group list-group-flush">
                  <% cart.items.forEach(item =>{ %>

                  <li
                    class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0"
                  >
                    <%=item.cantidad%>x <%= item.nombre %>
                    <span>$<%= item.precio %></span>
                  </li>

                  <% }) %>
                </ul>
              </div>
              <div class="order-col">
                <div>Envio</div>
                <div><strong>Gratis</strong></div>
              </div>
              <div class="order-col">
                <div><strong>TOTAL</strong></div>
                <div><strong class="order-total"></strong></div>
                <span><strong>$<%= cart.total %></strong></span>
              </div>
            </div>
            <div class="payment-method">
              <div class="input-radio">
                <input type="radio" name="payment" id="payment-1" />
                <label for="payment-1">
                  <span></span>
                  Transferencia Bancaria
                </label>
                <div class="caption">
                  <p>
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                    sed do eiusmod tempor incididunt ut labore et dolore magna
                    aliqua.
                  </p>
                </div>
              </div>
              <div class="input-radio">
                <input type="radio" name="payment" id="payment-2" />
                <label for="payment-2">
                  <span></span>
                  Cheque Payment
                </label>
                <div class="caption">
                  <p>
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                    sed do eiusmod tempor incididunt ut labore et dolore magna
                    aliqua.
                  </p>
                </div>
              </div>
              <div class="input-radio">
                <input type="radio" name="payment" id="payment-3" />
                <label for="payment-3">
                  <span></span>
                  Paypal
                </label>
                <div class="caption">
                  <p>
                    Lorem ipsum dolor sit amet, consectetur adipisicing elit,
                    sed do eiusmod tempor incididunt ut labore et dolore magna
                    aliqua.
                  </p>
                </div>
              </div>
            </div>
            <div class="input-checkbox">
              <input type="checkbox" id="terms" />
              <label for="terms">
                <span></span>
                He leido y acepto los <a href="#">Terminos y Condiciones</a>
              </label>
            </div>

            <form action="/checkout/order" method="POST">
              <button type="submit">
                <a class="primary-btn order-submit text-white">Comprar</a>
              </button>
            </form>
          </div>
          <!-- /Order Details -->
        </div>
        <!-- /row -->

        <!-- /container -->

        <!-- /SECTION -->

        <script
          src="/javascript/checkoutValidator.js"
          type="text/javascript"
        ></script>
        <script
          src="https://cdnjs.cloudflare.com/ajax/libs/validator/13.1.1/validator.min.js"
          integrity="sha512-rVYlbsnsxljzvf4sgKzI6ncbNKKxupFhoQ/9ptW7R5fhKE9wQevsfUAZEbJ6xl+VyaiGm3lAKChPLoV/VuaZJA=="
          crossorigin="anonymous"
        ></script>

        <script
          src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
          integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
          crossorigin="anonymous"
        ></script>
        <script
          src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js"
          integrity="sha384-Q6E9RHvbIyZFJoft+2mJbHaEWldlvI9IOYy5n3zV9zzTtmI3UksdQRVvoxMfooAo"
          crossorigin="anonymous"
        ></script>
        <script
          src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"
          integrity="sha384-OgVRvuATP1z7JjHLkuOU7Xw704+h835Lr+6QL9UvYjZE3Ipu6Tp75j7Bh/kR0JKI"
          crossorigin="anonymous"
        ></script>
        <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
        <script src="/javascript/sweetAlert.js"></script>
        <!-- Fonts Awesome -->
        <script src="https://use.fontawesome.com/142d130b8e.js"></script>
      </div>
    </div>
    <!-- Include Footer -->
    <%- include('partials/footer') %>
  </body>
</html>

